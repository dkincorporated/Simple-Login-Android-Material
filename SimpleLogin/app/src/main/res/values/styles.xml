<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MaterialButtonTextAppearance">
        <item name="fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="CollapsingToolbarTextExpanded">
        <item name="fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="CollapsingToolbarTextCollapsed">
        <item name="fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="HeadingTextAppearance">
        <item name="fontFamily">@font/google_sans_text_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_m3_primary</item>
    </style>

    <style name="HeadingSubtextAppearance">
        <item name="fontFamily">@font/google_sans_text_regular</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AliasListTitleAppearance">
        <item name="fontFamily">@font/google_sans_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AliasListSubtextAppearance">
        <item name="fontFamily">@font/google_sans_text_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SettingsListTitleTextAppearance">
        <item name="fontFamily">@font/google_sans_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SettingsListTitleSubtextAppearance">
        <item name="fontFamily">@font/google_sans_text_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

    <style name="NavDrawerItemTextAppearance">
        <item name="fontFamily">@font/google_sans_text_medium</item>
    </style>

    <style name="MaterialButtonDetailEdit" parent="Widget.Material3.Button.TextButton">
        <item name="fontFamily">@font/google_sans_text_medium</item>
    </style>

    <!--Tab text size-->
    <style name="TabText" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <!--Custom MaterialAlertDialogTheme-->
    <style name="SLMaterialAlertDialog" parent="@style/ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarNeutralButtonStyle">@style/SLMaterialAlertButtonNeutral</item>
        <item name="buttonBarNegativeButtonStyle">@style/SLMaterialAlertButtonNegative</item>
        <item name="buttonBarPositiveButtonStyle">@style/SLMaterialAlertButtonPositive</item>
        <item name="materialAlertDialogTitleTextStyle">@style/SLMaterialDialogTitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/SLMaterialDialogBodyTextStyle</item>
    </style>

    <style name="SLMaterialAlertButtonNeutral" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="SLMaterialAlertButtonNegative" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_m3_error</item>
    </style>

    <style name="SLMaterialAlertButtonPositive" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:backgroundTint">@color/color_m3_primary</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SLMaterialDialogTitleTextStyle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
    </style>

    <style name="SLMaterialDialogBodyTextStyle" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <!--End of: Custom MaterialAlertDialogTheme-->

    <style name="SlAlertDialogTheme" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="textAppearanceListItemSmall">?attr/textAppearanceSubtitle2</item>
        <item name="textColorAlertDialogListItem">@color/color_m3_primary</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <!-- Start of: M3 Dialog theme !-->

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="fontFamily">@font/google_sans_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MaterialAlertDialog.App.Body.Text" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="fontFamily">@font/google_sans_text_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MadButtonBarPositive" parent="Widget.Material3.Button">
        <item name="fontFamily">@font/google_sans_text_medium</item>
    </style>

    <style name="MadButtonBarNeutral" parent="Widget.Material3.Button.OutlinedButton">
        <item name="fontFamily">@font/google_sans_text_medium</item>
    </style>

    <!-- End of: M3 Dialog theme !-->

    <!-- Stjin - Custom textviews -->
</resources>
